<h1> Edit Figure</h1>

<form action="/figures/<%=@figure.id%>" method="post">
	<input type="hidden" name="_method" value="patch">
	<label >Figure Name :</label><input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>"></br>


	<label >Figure landmarks :</label>
	<%Landmark.all.each do |landmark|%>
	<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>" ></br>
	<%end%>

	<label >Add New Landmark:</label><input type="text" id="new_landmark" name="landmark[name]" ></br>



	<label >Figure titles :</label>
	<%Title.all.each do |title|%>
	<input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" ></br>
	<%end%>
	<label >Create New Title:</label><input type="text" id="new_title" name="title[name]" ></br>




	<input type="submit" name="submit" value="Edit Figure">

</form>
